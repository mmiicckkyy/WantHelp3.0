        <script>
            $(document).ready(function () {

                /*********** Recuperar el ancho y alto dela pantalla (resolucion)***********/
                $("#contenedorlogin").css('height', '270px');

                /*****************Opcion para ocultar y mostrar el div*******************/
                $("#enlaceIn").click(function () {
                    $("#contenedorlogin").show();
                    $("#enlaceIn").hide();
                    $("#enlaceOut").show();
                });
                $("#enlaceOut").click(function () {
                    $("#contenedorlogin").hide();
                    $("#enlaceOut").hide();
                    $("#enlaceIn").show();
                });

                /**************Codigo para ocultar el div cuando se haga click en cualquier otro lado del documento****************/

                $(document.body).click(function (e) {
                    var $box = $('#contenedorlogin');
                    if (e.target.id !== 'contenedorlogin' && e.target.id !== 'enlaceIn' && e.target.id !== 'enlaceOut' && !$.contains($box[0], e.target)) {
                        $("#contenedorlogin").hide();
                        $("#enlaceOut").hide();
                        $("#enlaceIn").show();
                    }
                });
            });
        </script>
