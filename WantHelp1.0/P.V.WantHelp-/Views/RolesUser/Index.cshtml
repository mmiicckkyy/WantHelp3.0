@model IEnumerable<P.V.WantHelp_.Models.webpages_UsersInRoles>

@{
    ViewBag.Title = "Index";
}
<link href="~/cssInk/css/ink.css" type="text/css" rel="stylesheet"/>
<style> 
footer {
        clear:both;
        background-color: #414E5E;   
        font-size: .8em;
        height: 61px;
        border-radius: 5px 5px 5px 5px;
        margin:2px 2px 2px 2px;
    }
    </style>
<section class="content-wrapper main-content clear-fix">
<div id="body_Curso">
<h2 class="letraD">Asigacion de Roles</h2>
    <p>
    <a href="/RolesUser/Create" class="tooltip" title="Nuevo Rol">
        <img src="~/Image/add-item.png"/>
    </a>
</p>
<table class="ink-table hover">
    <tr>
        <th style="display:none;">
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>Nombre Del usuario</th>
        <th>
            @Html.DisplayNameFor(model => model.webpages_Roles.RoleName)
        </th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td style="display:none;">
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @ViewBag.Id_UsuRol || @ViewBag.UsuarioRol
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.webpages_Roles.RoleName)
        </td>
        <td>
            <a href="/RolesUser/EditConfirmed/@item.RoleId @item.UserId" class="tooltip " title="Editar">
                <img src="~/Image/edit.png"/>
            </a><span class="barrita">|</span>
            <a href="/RolesUser/Details/@item.RoleId @item.UserId" class="tooltip " title="Detalle">
                <img src="~/Image/addressbook.png"/>
            </a><span class="barrita">|</span>
            <a href="/RolesUser/DeleteConfirmed/@item.UserId @item.RoleId" class="tooltip " title="Eliminar">
                <img src="~/Image/delete-item.png"/>
            </a>
            
        </td>
    </tr>
}

</table>
</div>
</section>


