@model IEnumerable<P.V.WantHelp_.Models.Cursos>
@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" type="text/css" href="~/Css/ink-min.css">
<style type="text/css">
    
    footer {
    clear:both;
    background-color: #414E5E;   
    font-size: .8em;
    height: 61px;
    border-radius: 5px 5px 5px 5px;
    margin:2px 2px 2px 2px;

    filter: progid:DXImageTransform.Microsoft.gradient(gradientType=0, startColorstr='#FF696969', endColorstr='#FF252525');
    
}
</style>
<section class="content-wrapper main-content clear-fix">
<div id="body_Curso">
<h2 class="letraD" style="font-size:30px; left:0;">Bienvenido a los cursos</h2>
@foreach (var item in Model){
    <h3></h3>
    <h2 style="display:none;">
        @Html.DisplayFor(modelItem => item.Id_Curso)
    </h2>
    <a href="http://localhost:2606/" style="cursor:pointer; background-image:url('@Html.DisplayFor(modelItem => item.FotoPortada)')no-repeat; ">
        <div id="contenedorA">    
            <h1 class="sin-bordes"  style="font-family:Gabriola;font-size:20px;color:#d7d8e1;">
                @Html.DisplayFor(modelItem => item.Titulo)        
                <span class="forma"></span>
            </h1>
            <div style="margin:auto; margin-left:8%;margin-right:8%;">
                <img src="@Html.DisplayFor(modelItem => item.FotoPortada)" width="200" height="80" style="border-radius:5px;">
                @Html.DisplayFor(modelItem => item.Descripcion)            
            </div>       
                <div style="margin:auto;margin-left:65%;width:35%;margin-top:-20px;"><img src="~/Images/cal-icono-9496-32.png">
                    <small>@Html.DisplayFor(modelItem => item.Fecha_I) &nbsp;&nbsp;|&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.Fecha_F)</small>    
                </div>                    
        </div>
     </a>
    @Html.ActionLink("Entrar al Curso", "ClasesCurso", new { id=item.Id_Curso })
}
    </div>
    </section>