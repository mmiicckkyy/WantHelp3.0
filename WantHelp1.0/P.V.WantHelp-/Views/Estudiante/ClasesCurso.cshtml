@model IEnumerable<P.V.WantHelp_.Models.sesiones>

@{
    ViewBag.Title = "ClasesCurso";
}
<link rel="stylesheet" type="text/css" href="~/Css/Nuevos.css" />
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/editordetexto.js"></script>
<style>
    .contenedor_opcionescursos{
       margin:0 auto;       
       border:#000000 0px solid;
       min-height:30px;
    }
    .opciones1{
        display:inline-block;
        max-width:49%;
        border:#000000 0px solid;
       padding-left:0px 2px;
       margin:2px 5px;
       color:#000000;
       font-weight:normal;
       font-size:12px;
       vertical-align:middle;
       text-align:center;
    }
</style>
<section class="section_cursos">
    <h2>Clases</h2>
    <p style="margin-left:15px;">
        @Html.ActionLink("  Atrás", "Index") | @Html.ActionLink("Nueva Clase", "Create")    
    </p>
    <div style="font-size:20px; margin-left:8px;">
        Ordenar por:
    </div>
    <div>
        <div style="display:inline-block;width:48%;">
            <ul class="menu_cursos">
                <li>Prioridad</li>
                <li>Nuevos</li>
            </ul>
        </div>        
    </div>
    <div class="contenedor_opcionescursos">
        <div class="opciones1" style="margin-left:0px;">
            @foreach (var item in Model) {    
                <div class="cursos_11" style="margin-left:50px; width:450px;">                
                    <img src="~/Image/otto.png" class="curso1img" />
                    <div class="curso1" style="">
                        <div style="text-align:center;font-size:33px;">@Html.DisplayFor(modelItem => item.titulo)</div>
                        <div style="text-align:center;font-size:18px;"><a href="/Estudiante/IngresaAlMaterial/@item.id">Archivos del curso</a>|<a href="/Estudiante/IngresarAlCurso/@item.id">Chat</a></div>
                        <div style="text-align:center;font-size:20px;">@Html.DisplayFor(modelItem => item.descriocion)</div>
                    </div>
                </div>        
            }    
        </div>
        <div class="opciones1" style="margin-top:-150px;"> 
            <section>      
                @Html.Partial("../Estudiante/preguntas")      
            </section>
        </div>
    </div>    
</section>